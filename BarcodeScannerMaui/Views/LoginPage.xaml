<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:BarcodeScannerMaui.ViewModels"
             xmlns:converters="clr-namespace:BarcodeScannerMaui.Converters"
             x:Class="BarcodeScannerMaui.Views.LoginPage"
             Title="Login"
             BackgroundColor="White">

    <ContentPage.Resources>
        <converters:StringNotEmptyToBoolConverter x:Key="StringNotEmptyToBoolConverter"/>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <viewmodels:LoginViewModel />
    </ContentPage.BindingContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header/Title -->
        <StackLayout BackgroundColor="#E9D8FD" Padding="16" Grid.Row="0">
            <Label Text="Login" 
                   FontSize="20" 
                   TextColor="#6B46C1" 
                   FontAttributes="Bold" />
        </StackLayout>

        <!-- Main Content -->
        <StackLayout Grid.Row="1" 
                     VerticalOptions="Center" 
                     Padding="20"
                     Spacing="20">

            <!-- Icon -->
            <Image Source="login_icon.png" 
                   HeightRequest="100" 
                   WidthRequest="100"
                   HorizontalOptions="Center" />

            <!-- Welcome text -->
            <Label Text="Welcome Back" 
                   FontSize="24" 
                   TextColor="#6B46C1"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Label Text="Barcode Scanner" 
                   FontSize="18" 
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20" />

            <!-- Username/ID entry -->
            <Frame BackgroundColor="#E9D8FD" 
                   Padding="15,0" 
                   HeightRequest="50"
                   HasShadow="False"
                   CornerRadius="25">
                <Entry Text="{Binding Username}" 
                       Placeholder="Username" 
                       TextColor="Gray"
                       PlaceholderColor="Gray"
                       BackgroundColor="Transparent"
                       VerticalOptions="Center"/>
            </Frame>

            <!-- Password entry -->
            <Frame BackgroundColor="#E9D8FD" 
                   Padding="15,0" 
                   HeightRequest="50"
                   HasShadow="False"
                   CornerRadius="25">
                <Entry Text="{Binding Password}" 
                       Placeholder="Password" 
                       IsPassword="True"
                       TextColor="Gray"
                       PlaceholderColor="Gray" 
                       BackgroundColor="Transparent"
                       VerticalOptions="Center"/>
            </Frame>

            <!-- Login button -->
            <Button Text="LOGIN"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#6B46C1"
                    TextColor="White"
                    HeightRequest="50"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    FontAttributes="Bold"
                    CornerRadius="25"/>

            <!-- Error message -->
            <Label Text="{Binding ErrorMessage}" 
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyToBoolConverter}}" 
                   TextColor="Red" 
                   HorizontalOptions="Center" 
                   Margin="0,10,0,0" />
        </StackLayout>
    </Grid>
</ContentPage>
