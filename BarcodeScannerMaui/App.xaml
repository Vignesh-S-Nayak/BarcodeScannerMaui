<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:BarcodeScannerMaui.Converters"
             x:Class="BarcodeScannerMaui.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Define basic colors -->
            <Color x:Key="PrimaryColor">#2196F3</Color>
            <Color x:Key="AccentColor">#FF9800</Color>

            <!-- Converters -->
            <converters:StringNotEmptyToBoolConverter x:Key="StringNotEmptyToBoolConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
