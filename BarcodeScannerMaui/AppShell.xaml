<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:BarcodeScannerMaui.Views"
       x:Class="BarcodeScannerMaui.AppShell"
       BackgroundColor="#F3E8FF"
       TitleColor="#6B46C1"
       ForegroundColor="#6B46C1"
       TabBarBackgroundColor="#F3E8FF"
       TabBarForegroundColor="#6B46C1"
       TabBarTitleColor="#6B46C1"
       TabBarUnselectedColor="Gray">

    <TabBar>
        <ShellContent Title="Scan" 
                      Icon="scan.png" 
                      Route="scan" 
                      ContentTemplate="{DataTemplate local:ScanPage}" />
        <ShellContent Title="Items" 
                      Icon="cart.png" 
                      Route="items" 
                      ContentTemplate="{DataTemplate local:ItemsPage}" />
    </TabBar>
</Shell>
